    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.hedera.reku.capstone.finance.BankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank 1" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="in.hedera.reku.capstone.finance.AccountFragment"
            tools:layout="@layout/sub_fragment_account"
            android:id="@+id/frag_account">
        </fragment>
    </LinearLayout>

</FrameLayout>
