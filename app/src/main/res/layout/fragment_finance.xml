<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.hedera.reku.capstone.FinanceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart1"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:layout_gravity="top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:contentDescription="List of Bank Accounts"
                android:textStyle="normal|bold"
                android:textAllCaps="true" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="in.hedera.reku.capstone.finance.BankFragment"
                tools:layout="@layout/sub_fragment_bank"
                android:id="@+id/frag_bank">

            </fragment>


            <TextView
                android:text="Budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:contentDescription="Budget"
                android:textStyle="normal|bold"
                android:textAllCaps="true"/>


            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar2"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:progress="25"
                android:progressTint="@android:color/holo_green_light"
                 />

            <TextView
                android:text="Log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="View Log"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
